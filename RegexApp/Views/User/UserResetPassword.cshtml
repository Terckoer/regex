@{
    ViewData["Title"] = "Reset Password";
}
<div class="container text-center">
    <div class="w-100 mb-3">
        <h1>User</h1>
    </div>
    <form class="d-flex flex-column align-items-center justify-content-center" asp-action="ValidateEmail" asp-controller="User" method="post">
        <div class="d-flex flex-column align-items-start w-25 mb-1">
            <label class="col-form-label fs-3" for="id-user-email">Email</label>
            <input class="form-control" type="email" placeholder="Email" id="id-user-email" name="email"/>
        </div>
        <div class="w-25 mt-2">
            <input class="btn btn-success w-100" type="submit" value="Verify" />
        </div>
    </form>
</div>