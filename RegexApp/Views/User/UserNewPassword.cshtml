
@{
    ViewData["Title"] = "Reset your password";
    string email = "email@email.com";
}

<div class="container text-center">
    <div class="w-100 mb-3">
        <h1>Change your password</h1>
    </div>
    <h2>@email</h2>
    <form class="d-flex flex-column align-items-center justify-content-center" method="post" asp-action="ChangePassword" asp-controller="User">
        <div class="d-flex flex-column align-items-start w-25 mb-1">
            <label class="col-form-label fs-4" for="id-new-password">New password</label>
            <input class="form-control" type="password" placeholder="New password" id="id-new-password" name="password" />
        </div>
        <div class="d-flex flex-column align-items-start w-25 mb-1">
            <label class="col-form-label fs-4" for="id-again-new-password">Confirm your new password</label>
            <input class="form-control" type="password" placeholder="Confirm your new password" id="id-again-new-password" name="confirmPassword" />
        </div>
        <div class="w-25 mt-2">
            <input class="btn btn-success w-100" type="submit" value="Save" />
        </div>
    </form>
</div>
